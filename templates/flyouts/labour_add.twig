<div class="flyout" id="flyout-labour_add">
    <div class="header">
        <span>Add Labour</span>
        <button class="flyout-close"><i data-feather="x"></i></button>
    </div>
    <div class="body">
    <form class="process-form" id="flyout-form__labour_add">
		<input type="hidden" name="action" value="labour-add" />
        <input type="hidden" name="service_id" value="{{ service.service_id }}">
		<div class="form-group">
			<label>Labour Description</label>
			<input class="form-control" type="text" name="description" />
			<div class="form-error"></div>
			<div class="form-help">Enter a description of the work.</div>
		</div>
		<div class="form-group">
			<label>Hours</label>
			<input class="form-control" type="number" name="hours" min="1" value="1" />
			<div class="form-error"></div>
		</div>
        <div class="form-group">
		    <button type="submit" class="button --primary">Add Labour<i data-feather="loader"></i></button>
        </div>
	</form>
    </div>
</div>