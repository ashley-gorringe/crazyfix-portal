<div class="flyout" id="flyout-domain_new">
    <div class="header">
        <span>Add Domain</span>
        <button class="flyout-close"><i data-feather="x"></i></button>
    </div>
    <div class="body">
    <form class="process-form" id="flyout-form__domain-new">
		<input type="hidden" name="action" value="domain-new" />
        <input type="hidden" name="site_id" value="{{site.site_slug}}" />
		<div class="form-group">
			<label>Domain Name</label>
			<input class="form-control" type="text" name="domain" placeholder="example.com" />
			<div class="form-error"></div>
		</div>
		<div class="form-group">
			<label>Include 'www.' subdomain?<span>(Optional)</span></label>
			<button class="form-toggle"><span class="toggle"></span><span class="e">Include</span><span class="d">Don't Include</span></button>
			<input type="hidden" class="form-toggle-input" name="domain_www" value="false">
			<div class="form-help">If enabled, this will add an additional www. subdomain to the above Domain Name.</div>
		</div>
        <div class="form-group">
		    <button type="submit" class="button --primary">Add Domain<i data-feather="loader"></i></button>
        </div>
	</form>
    </div>
</div>