{% extends "_layout_dashboard.twig" %}

{% set menuSlug = "bookings" %}
{% set pageTitle = "Bookings" %}

{% block main %}
<section>
    <div class="container">
        <h1>Bookings</h1>
    </div>
</section>
<section>
    <div class="container">
        <a href="#" class="button --primary --icon-left flyout-booking_new">Create Booking<i data-feather="plus-circle"></i></a>
    </div>
</section>
<section>
    <div class="container">
    {% if bookings %}
        <div class="table --bookings">
            <div class="header">
                <span>Booking No.</span>
                <span>Vehicle</span>
                <span>Service Date</span>
            </div>
            <div class="body">
            {% for booking in bookings %}
                <a class="row" href="#">
                    <span>{{booking.service_id}}</span>
                    <span>{{booking.make}} {{booking.model}} ({{booking.registration}})</span>
                    <span>{{booking.start_date}}</span>
                </a>
            {% endfor %}
            </div>
        </div>
    {% else %}
        <div class="index-empty">
            <span>Nothing to see here...</span>
        </div>
    {% endif %}
    </div>
</section>
{% include 'flyouts/booking_new.twig' %}
{% endblock %}