{% extends "_layout_login.twig" %}

{% set menuSlug = "login" %}
{% set pageTitle = "Login" %}

{% block main %}
<div class="login-box">
	<h3>Sign in to the CrazyFix Portal</h3>
	<p>Enter your email address below, if you don’t have an account yet we’ll get you set up!</p>
	<form id="form-welcome" class="process-form">
		<input type="hidden" name="action" value="welcome" />
		<div class="form-group">
			<label>Email Address</label>
			<input class="form-control" type="email" name="email" placeholder="example@email.com" autofocus />
			<div class="form-error"></div>
		</div>
		<button type="submit" class="button --primary --fw">Continue<i data-feather="loader"></i></button>
	</form>
	<form id="form-sign-in" class="process-form">
		<input type="hidden" name="action" value="sign-in" />
		<div class="form-group">
			<label>Email Address</label>
			<input class="form-control" type="email" name="email" id="sign-in-email" placeholder="example@email.com" />
			<div class="form-error"></div>
		</div>
		<div class="form-group">
			<label>Password</label>
			<input class="form-control" type="password" name="password" id="sign-in-password" />
			<div class="form-error"></div>
		</div>
		<button type="submit" class="button --primary --fw">Sign in<i data-feather="loader"></i></button>
		<a href="/sign-up" class="button --quiet --fw">Create a new Account</a>
	</form>
</div>
{% endblock %}
